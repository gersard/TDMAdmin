<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="20 de Enero, 2021" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/order_detail_state_corner_radius"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:backgroundTint="@color/divider_gray"
        tools:text="Completado" />

    <ProgressBar
        android:id="@+id/pb_state_update"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:indeterminateTint="@color/color_primary"
        android:visibility="gone" />

</FrameLayout>